<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#222232"
    android:padding="8dp">

    <!-- 프로필 이미지 -->
    <ImageView
        android:id="@+id/imageViewCommunityProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher_foreground"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp" />

    <!-- 커뮤니티 이름 및 설명 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCommunityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Name"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/textViewCommunityDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Description"
            android:textSize="14sp"
            android:textColor="#C4C4C4" />
    </LinearLayout>
</LinearLayout>
